@model IEnumerable<HairdressersWebApplication1.Gender>

@{
    ViewData["Title"] = "Index";
}

<h1>Гендери</h1>

<p>
    <a asp-action="Create">Створити</a>
</p>
<div class="text-danger">@ViewBag.F</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Gender1)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Gender1)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GenderId">Змінити</a> |
                <a asp-action="Details" asp-route-id="@item.GenderId">Деталі</a> |
                <a asp-action="Delete" asp-route-id="@item.GenderId">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model IEnumerable<HairdressersWebApplication1.EmployeesPosition>

@{
    ViewData["Title"] = "Index";
}

@*<h1>Index</h1>*@

<p>
    @Html.ActionLink("Створити","Create", new {positionId = @ViewBag.PositionIdd})
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position.Position1)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmployeesPositionId" asp-route-positionId = "@item.Position.PositionId">Змінити</a> |
                <a asp-action="Details" asp-route-id="@item.EmployeesPositionId" asp-route-positionId = "@item.Position.PositionId">Деталі</a> |
                <a asp-action="Delete" asp-route-id="@item.EmployeesPositionId" asp-route-positionId = "@item.Position.PositionId">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>

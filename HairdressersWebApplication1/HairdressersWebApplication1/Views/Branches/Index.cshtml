@model IEnumerable<HairdressersWebApplication1.Branch>

@{
    ViewData["Title"] = "Index";
}

<h1>Відділення</h1>
@if (User.IsInRole("admin"))
{
    <p>
        <a asp-action="Create" asp-route-id="@ViewBag.BranchIdd">Створити</a>
    </p>
}
<div class="text-danger">@ViewBag.F</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                @if (User.IsInRole("admin"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.BranchId">Змінити</a> |
                        <a asp-action="Details" asp-route-id="@item.BranchId">Деталі</a> |
                        <a asp-action="Delete" asp-route-id="@item.BranchId">Видалити</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

@model HairdressersWebApplication1.Position

@{
    ViewData["Title"] = "Edit";
}

<h1>Змінити</h1>

<h4>Позиція</h4>
<hr />
<div class="text-danger">@ViewBag.F</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PositionId" />
            <div class="form-group">
                <label asp-for="Position1" class="control-label"></label>
                <input asp-for="Position1" class="form-control" />
                <span asp-validation-for="Position1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

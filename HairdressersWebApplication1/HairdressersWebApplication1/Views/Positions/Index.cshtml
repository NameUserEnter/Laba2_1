@model IEnumerable<HairdressersWebApplication1.Position>

@{
    ViewData["Title"] = "Позиції";
}

<h1>Позиції</h1>

<p>
    @if (User.IsInRole("admin"))
    {
        <a asp-action="Create">Створити нову</a>
    }
</p>
<div class="text-danger">@ViewBag.F</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Position1)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Position1)
                </td>
                <td>
                    @if (User.IsInRole("admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.PositionId">Змінити</a>
                    }
                    @if (!User.IsInRole("admin"))
                    {
                        <a asp-action="Index" asp-controller="Employees" asp-route-id="@item.PositionId">Деталі</a>
                    }
                    @if (User.IsInRole("admin"))
                    {
                        <a asp-action="Details" asp-route-id="@item.PositionId">Деталі</a>
                        <a asp-action="Delete" asp-route-id="@item.PositionId">Видалити</a>
                    }
                </td>

            </tr>
        }
    </tbody>
</table>
